{
  "compileOnSave": false,
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es5",
    "moduleResolution": "node",
    "baseUrl": "src",
    "allowJs": false,
    "declaration": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "./dev-app/**/*.ts"
  ],
  "atom": {
    "rewriteTsconfig": false
  }
}